<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/colorPrimary"
        android:padding="@dimen/space_large"/>
    <TextView
        android:paddingTop="@dimen/space_large"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_back"
        android:text="Setting"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_done_black_24dp"
        android:padding="@dimen/space_large"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dfdfdf"
        android:layout_below="@id/iv_back"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_daily_remember"
        android:layout_below="@id/view_1"
        android:text="Daily Reminder"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sw_reminder"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_1"
        android:padding="@dimen/space_large"/>
    <TextView
        android:id="@+id/tv_time_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_reminder"
        android:text="00:00"
        android:paddingStart="@dimen/space_large"
        android:textSize="16dp"/>

</RelativeLayout>